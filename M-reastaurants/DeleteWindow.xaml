        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:M_reastaurants"
        mc:Ignorable="d"
        Title="DeleteWindow" Height="300" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="142*"/>
            <ColumnDefinition Width="151*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="textBoxDelete" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap"  VerticalAlignment="Top" Width="262" Margin="22,109,0,0" Grid.ColumnSpan="2" Text=""/>
        <Button x:Name="buttonDelete" Content="Удалить" HorizontalAlignment="Left" VerticalAlignment="Top" Width="110" Click="buttonDelete_Click" Margin="22,161,0,0" Height="28"/>
        <TextBlock x:Name="textBlockDelete" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Введите название ресторана, который хотите удалить" VerticalAlignment="Top" Margin="22,54,0,0" Grid.ColumnSpan="2" Height="50" Width="262" FontSize="14"/>

    </Grid>
</Window>

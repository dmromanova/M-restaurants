        <ComboBox x:Name="comboBoxService" HorizontalAlignment="Left" VerticalAlignment="Top" Width="39" Margin="119,88,0,0">
            <ComboBoxItem>1</ComboBoxItem>
            <ComboBoxItem>2</ComboBoxItem>
            <ComboBoxItem>4</ComboBoxItem>
            <ComboBoxItem>5</ComboBoxItem>
        </ComboBox>
        <ComboBox x:Name="comboBoxPrice" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="119,122,0,0">
            <ComboBoxItem>до 1500р.</ComboBoxItem>
            <ComboBoxItem>от 1500 до 3000р.</ComboBoxItem>
            <ComboBoxItem>от 3000 до 5000р.</ComboBoxItem>
            <ComboBoxItem>более 5000р.</ComboBoxItem>
        </ComboBox>
        <TextBox x:Name="textBoxLocation" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="195" Margin="119,156,0,0"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Margin="119,192,0,0" Width="195" Height="23"/>
        <TextBox x:Name="textBoxType" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="119,192,0,0"/>

    </Grid>
